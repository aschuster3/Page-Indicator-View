<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.testsuite.slidinginfo.SlidingPane"
    tools:ignore="MergeRootFrame" >
	
    <com.centaurii.views.pageindicator.lib.PageIndicator
        android:id="@+id/page_tracker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:num_indicators="5"
        app:indicator_radius="3dp"
        app:color="#0000ff"
        app:bgcolor="#ffffff"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/page_tracker"/>


</RelativeLayout>